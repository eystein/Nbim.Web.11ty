{#
Parameters received by this partial:

hType
txt
classes
url (optional) #}


{%-  macro headingType(params) -%}
	{% if params.hType %}h{% params.hType | safe %}{% else %}h3{% endif %}
{%- endmacro -%}

{%-  macro theContent(params) -%}
  {% if params.url %}
    <a href="{% params.url | safe %}" title="{% params.txt | safe %}">
      {% params.txt | safe %}
    </a>
  {% else %}
    {% params.txt | safe %}
  {% endif %}
{%- endmacro -%}


<{{
	headingType({
		hType: params.hType
	})
}} class="heading">
	{{
		theContent({
			url: params.url,
			txt: params.txt
		})
	}}
</{{
	headingType({
		hType: params.hType
	})
}}>



