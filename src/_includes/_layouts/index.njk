{% extends "../_layouts/_layout.njk" %}

{% from "macros/sectionTop.macro.njk" import sectionTop %}
{% from "macros/sectionSplit.njk" import sectionSplit %}
{% from "macros/section-sec-3.njk" import sectionSec3 %}
{% from "macros/section-sec-2.njk" import sectionSec2 %}


{% block main %}

	{{
		sectionTop({
			text: section_top_oljefondet_headline,
			isBig: true,
			headlineHasCurrency: true,
			hasArrowDown: true,
			imgAltText: section_top_oljefondet_imgAltText,
			imgUrl: section_top_oljefondet_imgUrl,
			headlinePre: section_top_oljefondet_headlinePre,
			headline: section_top_oljefondet_headline,
			headlineSub: section_top_oljefondet_headlineSub
		})
	}}
	
	{{
		sectionSplit({
			isAlt: false,
			quote: false,
			spacingTop: false,
			isShort: false,
			pictureToLeft: true,
			inlineImage: false,
			imgUrl: section_split_hva_er_oljefondet_imgUrl,
			imgAltText: section_split_hva_er_oljefondet_imgAltText,
			headline: section_split_hva_er_oljefondet_headline,
			ingress: section_split_hva_er_oljefondet_ingress,
			links: section_split_hva_er_oljefondet_links
		})
	}}
	
	{{ 
		sectionSec3({
			isAlt: true,
			headline: section_sec_3_investments_headline,
			links: section_sec_3_investments_links,
			items: section_sec_3_investments_items
		})
	}}
	
	{{
		sectionSec2({
			isAlt: true,
			spacingTop: '0',
			items: section_sec_2_investments2_items
		})


  }}

{% endblock %}

