{
	"name": "nbim_web_11ty",
	"version": "1.0.0",
	"description": "Static HTML library for NBIM",
	"main": "index.njk",
	"scripts": {
		"watch:sass": "sass --watch --update --style=expanded src/scss:docs/assets/css",
		"build:sass": "sass --no-source-map --style=compressed src/scss:static/css",
		"watch:js": "terser src/js/* -o docs/assets/js/main.js --source-map",
		"build:js": "terser src/js/* -o static/js/main.min.js",
		"watch:eleventy": "npx @11ty/eleventy --serve",
		"build:eleventy": "npx @11ty/eleventy",
		"dev": "npm-run-all build:sass --parallel watch:*",
		"build": "npm-run-all build:*",
		"test": "npx @11ty/eleventy --dryrun"
	},
	"author": "NoA Ignite",
	"license": "ISC",
	"contributors": [
		{
			"name": "Eystein Mack Alnæs"
		},
		{
			"name": "Sabina Strömmer-Marchewka"
		}
	],
	"devDependencies": {
		"@11ty/eleventy": "^1.0.2",
		"npm-run-all": "^4.1.5",
		"sass": "^1.56.0"
	},
	"dependencies": {
		"terser": "^5.15.1"
	}
}
